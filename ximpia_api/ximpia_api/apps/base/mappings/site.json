{
  "site": {
    "dynamic": "strict",
    "_timestamp": {
      "enabled": true
    },
    "_all": {
      "enabled": false
    },
    "properties": {
      "name": {
        "type": "string"
      },
      "slug": {
        "type": "string",
        "fields": {
          "slug": {
            "type": "string"
          },
          "raw": {
            "type": "string",
            "index": "not_analyzed"
          }
        }
      },
      "url": {
        "type": "string",
        "analyzer": "link_analyzer"
      },
      "is_active": {
        "type": "boolean"
      },
      "created_on" : {
        "type" : "date",
        "format" : "dateOptionalTime"
      }
    }
  }
}