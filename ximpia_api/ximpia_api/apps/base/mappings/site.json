{
  "site": {
    "dynamic": "strict",
    "_timestamp": {
      "enabled": true
    },
    "_all": {
      "enabled": false
    },
    "properties": {
      "account__v1": {
        "properties": {
          "id": {
            "type": "string",
            "fields": {
              "account__v1": {
                "type": "string"
              },
              "raw": {
                "type": "string",
                "index": "not_analyzed"
              }
            }
          },
          "organization__v1": {
            "properties": {
              "name__v1": {
                "type": "string"
              }
            }
          },
          "created_on__v1" : {
            "type" : "date",
            "format" : "dateOptionalTime"
          }
        }
      },
      "name__v1": {
        "type": "string"
        "fields": {
          "name__v1": {
            "type": "string"
          },
          "completion__v1": {
            "type": "completion",
            "analyzer": "simple_whitespace",
            "payloads": true,
            "preserve_separators": true,
            "preserve_position_increments": true,
            "max_input_length": 50
          }
        }
      },
      "slug__v1": {
        "type": "string",
        "fields": {
          "slug__v1": {
            "type": "string"
          },
          "raw__v1": {
            "type": "string",
            "index": "not_analyzed"
          }
        }
      },
      "url__v1": {
        "type": "string",
        "analyzer": "link_analyzer"
      },
      "is_active__v1": {
        "type": "boolean"
      },
      "invites": {
        "properties": {
          "age_days": {
            "type": "integer"
          },
          "active": {
            "type": "boolean",
            "null_value": false
          },
          "created_on": {
            "type" : "date",
            "format" : "dateOptionalTime"
          },
          "updated_on": {
            "type" : "date",
            "format" : "dateOptionalTime"
          }
        }
      },
      "text__v1": {
        "type": "string",
        "term_vector" : "with_positions_offsets",
        "analyzer" : "snowball"
      },
      "created_on__v1" : {
        "type" : "date",
        "format" : "dateOptionalTime"
      }
    }
  }
}