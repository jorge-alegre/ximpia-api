{
  "user-group": {
    "dynamic": "strict",
    "_timestamp": {
      "enabled": true
    },
    "_all": {
      "enabled": false
    },
    "properties": {
      "user": {
        "properties": {
          "username": {
            "type": "string",
            "fields": {
              "completion": {
                "type": "completion",
                "analyzer": "simple_whitespace",
                "payloads": false,
                "preserve_separators": true,
                "preserve_position_increments": true,
                "max_input_length": 50
              },
              "username": {
                "index": "not_analyzed",
                "copy_to": "text"
              }
            }
          },
          "email": {
            "type": "string",
            "analyzer": "email_analyzer",
            "copy_to": "text"
          },
          "avatar": {
            "type": "string",
            "index": "not_analyzed"
          },
          "name": {
            "type": "string",
            "fields": {
              "completion": {
                "type": "completion",
                "analyzer": "simple_whitespace",
                "payloads": false,
                "preserve_separators": true,
                "preserve_position_increments": true,
                "max_input_length": 50
              },
              "name": {
                "term_vector" : "with_positions_offsets",
                "analyzer" : "snowball",
                "copy_to": "text"
              }
            }
          },
          "social_networks": {
            "type": "nested",
              "include_in_parent": true,
              "dynamic": "false",
              "properties": {
                 "network": {
                    "type": "string",
                    "index": "not_analyzed"
                 },
                "user_id": {
                  "type": "string",
                  "index": "not_analyzed"
                },
                "access_token": {
                  "type": "string",
                  "index": "not_analyzed"
                },
                "state": {
                  "type": "string",
                  "index": "not_analyzed"
                },
                "has_auth": {
                  "type": "boolean",
                  "null_value": false
                },
                "link": {
                  "type": "string",
                  "index": "not_analyzed"
                }
              }
          },
          "permissions": {
            "type": "nested",
            "include_in_parent": true,
            "dynamic": "false",
            "properties": {
              "name": {
                "type": "string",
                "fields": {
                  "name": {
                    "type": "string"
                  },
                  "raw": {
                    "type": "string",
                    "index": "not_analyzed"
                  }
                }
              },
              "status": {
                "type": "string",
                "index": "not_analyzed"
              },
              "created_on": {
                "type" : "date",
                "format" : "dateOptionalTime"
              }
            }
          },
          "created_on" : {
            "type" : "date",
            "format" : "dateOptionalTime"
          }
        }
      },
      "group": {
        "properties": {
          "id": {
            "type": "long"
          },
          "name": {
            "type": "string"
          },
          "slug": {
            "type": "string",
            "fields": {
              "slug": {
                "type": "string"
              },
              "raw": {
                "type": "string",
                "index": "not_analyzed"
              }
            }
          },
          "tags": {
            "type": "nested",
            "include_in_parent": true,
            "properties": {
              "name": {
                "type": "string"
              },
              "slug": {
                "type": "string"
              },
              "is_hash": {
                "type": "boolean",
                "null_value": false
              }
            }
          },
          "created_on" : {
            "type" : "date",
            "format" : "dateOptionalTime"
          }
        }
      },
      "text": {
        "type": "string",
        "term_vector" : "with_positions_offsets",
        "analyzer" : "snowball"
      },
      "created_on" : {
        "type" : "date",
        "format" : "dateOptionalTime"
      }
    }
  }
}