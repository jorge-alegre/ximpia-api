{
  "group": {
    "dynamic": "strict",
    "_timestamp": {
      "enabled": true
    },
    "_all": {
      "enabled": false
    },
    "_parent": {
      "type": "group"
    },
    "properties": {
      "name": {
        "type": "string",
        "fields": {
          "completion": {
            "type": "completion",
            "analyzer": "simple_whitespace",
            "payloads": false,
            "preserve_separators": true,
            "preserve_position_increments": true,
            "max_input_length": 50
          },
          "name": {
            "type": "string",
            "copy_to": "text"
          }
        }
      },
      "slug": {
        "type": "string",
        "fields": {
          "slug": {
            "type": "string"
          },
          "raw": {
            "type": "string",
            "index": "not_analyzed"
          }
        }
      },
      "tags": {
        "type": "nested",
        "include_in_parent": true,
        "properties": {
          "name": {
            "type": "string",
            "copy_to": "text"
          },
          "slug": {
            "type": "string",
            "fields": {
              "slug": {
                "type": "string"
              },
              "raw": {
                "type": "string",
                "index": "not_analyzed"
              }
            }
          },
          "is_hash": {
            "type": "boolean",
            "null_value": false
          }
        }
      },
      "permissions": {
        "type": "nested",
        "include_in_parent": true,
        "dynamic": "false",
        "properties": {
          "name": {
            "type": "string",
            "fields": {
              "name": {
                "type": "string"
              },
              "raw": {
                "type": "string",
                "index": "not_analyzed"
              }
            }
          },
          "created_on": {
            "type" : "date",
            "format" : "dateOptionalTime"
          }
        }
      },
      "text": {
        "type": "string",
        "term_vector" : "with_positions_offsets",
        "analyzer" : "snowball"
      },
      "created_on" : {
        "type" : "date",
        "format" : "dateOptionalTime"
      }
    }
  }
}